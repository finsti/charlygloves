<div class="container--small container-mockup--height">
  <h1>Kontakt</h1>
  <h2>Schreiben Sie uns eine Nachricht</h2>
  <%= flash[:notice] %>
  <%= form_with(url:"/simple_pages/thank_you", method: "post", local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name, class: "form__label" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Ihr Name", class: "form__text-field" %>
  </div>
  <div class="form-group">
    <%= form.label :email, "E-Mail", class: "form__label" %>
    <%= form.text_field :email, class: "form-control", placeholder: "Ihre E-Mail Adresse", class: "form__text-field" %>
  </div>
  <div class="form-group">
    <%= form.label :message, "Nachricht", class: "form__label" %>
    <%= form.text_area :message, class: "form-control", placeholder: "Ihre Nachricht", rows: 5, class: "form__text-field" %>
  </div>
  <%= form.submit "Absenden", class: "form__btn form__btn--primary" %>
  <% end %>
</div>
