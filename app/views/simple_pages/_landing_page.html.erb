<div class="carousel-item<%= " active" if product == @products.first %>">
  <%= image_tag(product.image_url, class: "img-fluid img-carousel", alt: product.name) %>
  <div class="carousel-caption d-none d-md-block">
    <h3><%= product.name %></h3>
    <p><%= product.description %></p>
  </div>
</div>
