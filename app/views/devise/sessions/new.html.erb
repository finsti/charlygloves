<div class="container--small">
  <h1>Login</h1>
  <h2>Bitte geben Sie Ihre Benutzerdaten ein</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, "E-Mail", class: "form__label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form__text-field" %>
  </div>
  <div class="field">
    <%= f.label :password, "Passwort", class: "form__label" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "form__text-field" %>
  </div>
  <% if devise_mapping.rememberable? -%>
  <div class="field">
    <%= f.check_box :remember_me, class: "inline" %>
    <%= f.label :remember_me, "User merken", class: "inline" %>
  </div>
  <% end -%>
  <p><%= f.submit "Login", class: "form__btn form__btn--primary" %></p>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
