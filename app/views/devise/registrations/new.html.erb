<div class="container--small">
  <h1>Registrieren</h1>
  <h2>Kundenkonto erstellen</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="field">
    <%= f.label :email, "E-Mail", class: "form__label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form__text-field" %>
  </div>
  <div class="field">
    <%= f.label :password, "Passwort*", class: "form__label" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form__text-field" %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "BestÃ¤tigung Passwort", class: "form__label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form__text-field" %>
  </div>
  <p><%= f.submit "Registrieren", class: "form__btn form__btn--primary" %></p>
  <% end %>
  <% if @minimum_password_length %>
  <p><em>* Mindestens <%= @minimum_password_length %> Zeichen</em></p>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
